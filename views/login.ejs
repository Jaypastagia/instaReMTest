<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/jquery.dataTables.min.css">
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

</head>

<body ng-app="employeeApp" ng-controller="employeeCtrl">
    <h3 class="font-weight-bold text-center">Employee Login</h3>
    <div class="row">
        <label class="control-label col-md-5 italic">
			<i style="margin-left:15px">
				Fields marked with a   <span class="required"> * </span>  are mandatory </i>
		</label>
    </div>
    <form class="form-horizontal" name="employeeForm" ng-submit="loginForm(employeeForm)" novalidate>

        <div class="form-group" ng-class="{ 'has-error' : employeeForm.email.$invalid && !employeeForm.email.$pristine }">
            <label class="control-label col-sm-2" for="email">Email
                <span class="required"> * </span>
            </label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="email" id="email" placeholder="Enter email" ng-model="employee.email" required>
                <p ng-show="employeeForm.email.$invalid && !employeeForm.email.$pristine" class="help-block">Enter a valid email.</p>
            </div>
        </div>
        <div class="form-group" ng-class="{ 'has-error' : employeeForm.password.$invalid && !employeeForm.password.$pristine }">
            <label class="control-label col-sm-2" for="email">Password
                <span class="required"> * </span>
            </label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="password" id="password" placeholder="Enter password" ng-model="employee.password" required>
                <p ng-show="employeeForm.password.$invalid && !employeeForm.password.$pristine" class="help-block">Please enter password.</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10 ">
                <button type="submit" class="btn btn-success center" ng-disabled="employeeForm.$invalid">Login
				</button>
            </div>
            <div class="col-sm-offset-2 col-sm-10">
                <a href="/">Sign up</a>
            </div>
        </div>
    </form>
